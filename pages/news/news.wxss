.container{
 background: #ffffff;
 margin-top: 10rpx;
}
.item{
  width: 710rpx;
  height: 188rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
  position: relative;
 
}
.item-icon{
  height: 148rpx;
  width: 210rpx;
  position: absolute;
  top: 20rpx;
  left: 0rpx;
  border-radius: 8rpx
}
.item-title{
  position: absolute;
  width: 460rpx;
  right: 50rpx;
  left: 230rpx;
  top: 30rpx;
  font-size: 32rpx;
  color: #343434;
   overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;  
    -webkit-box-orient: vertical;
}
.item-date{
  position: absolute;
  left: 230rpx;
  bottom: 30rpx;
   font-size:24rpx;
  color: #666666
}
