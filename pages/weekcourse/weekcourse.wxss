page{
  background-color: #f5f5f5
}
.week{
  height: 72rpx;
  line-height: 72rpx;
  background-color: #5fcceb;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  width: 710rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.shitinfo{
  height: 120rpx;
  width: 710rpx;
  margin-left: 20rpx;
  position: relative;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: #ffffff
}
.shitinfo-bottom{
  height: 120rpx;
  width: 710rpx;
  margin-left: 20rpx;
  position: relative;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: #ffffff
}
.title{
  position: absolute;
  left: 20rpx;
  top: 15rpx;
  color: #343434;
  font-size: 26rpx;
}
.addr{
  position: absolute;
  left: 20rpx;
  top: 60rpx;
  color: #9f9f9f;
  font-size: 26rpx;
}
.time{
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  color: #9f9f9f;
  font-size: 26rpx;
}
.bottom{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #5fcceb;
  font-size: 30rpx;
  color: #ffffff;
  position: fixed;
  bottom: 0
}
.bottomnone{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #5fcceb;
  font-size: 30rpx;
  color: #ffffff;
  position: fixed;
  bottom: 0;
  display: none
}