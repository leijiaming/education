page{
  background-color: #f5f5f5
}
.item {
  position: relative;
  height: 460rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff
}

.item image {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.item .title {
  font-size: 32rpx;
  color: #343434;
  position: absolute;
  top: 340rpx;
  left: 15rpx;
}

.item .term {
  font-size: 26rpx;
  color: #8a8a8a;
  position: absolute;
  bottom: 30rpx;
  left: 15rpx;
}

.item .count {
  font-size: 26rpx;
  color: #67cfee;
  position: absolute;
  bottom: 70rpx;
  right: 15rpx;
}

.item .use-count {
  font-size: 26rpx;
  color: #67cfee;
  position: absolute;
  bottom: 30rpx;
  right: 15rpx;
}
